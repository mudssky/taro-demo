{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "allowUmdGlobalAccess": false, //避免未导入React的ts报错//因为会导致未引入taro的报错。所以放弃了
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src", "./types", "./config", "changelog.config.cjs"],
  "compileOnSave": false
}
